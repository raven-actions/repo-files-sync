{
  "name": "repo-files-sync",
  "description": "GitHub Action to keep files like Action workflows or entire directories in sync between multiple repositories.",
  "version": "0.0.0-development",
  "author": "Raven Actions",
  "bugs": "https://github.com/raven-actions/repo-files-sync/issues",
  "contributors": [
    "Maximilian Schiller <schiller@mxis.ch>"
  ],
  "dependencies": {
    "@actions/core": "^2.0.2",
    "@actions/github": "^7.0.0",
    "@octokit/plugin-throttling": "^11.0.3",
    "fs-extra": "^11.3.3",
    "js-yaml": "^4.1.1",
    "minimatch": "^10.1.1",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@octokit/core": "^7.0.6",
    "@octokit/plugin-rest-endpoint-methods": "^17.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.9",
    "@types/nunjucks": "^3.2.6",
    "@vitest/coverage-v8": "^4.0.17",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "prettier": "^3.8.0",
    "prettier-plugin-multiline-arrays": "^4.1.3",
    "syncpack": "^13.0.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "files": [
    "dist/*",
    "action.yml",
    "LICENSE",
    "README.md",
    "sync.schema.json"
  ],
  "homepage": "https://github.com/marketplace/actions/repo-files-sync",
  "keywords": [
    "file-sync",
    "files-sync",
    "github-action-workflow-sync",
    "github-actions",
    "github-workflow",
    "sync",
    "workflow-sync"
  ],
  "license": "MIT",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "private": true,
  "repository": "raven-actions/repo-files-sync.git",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "build:watch": "tsc --watch",
    "compile": "tsc",
    "format": "syncpack format && prettier --config ./.github/linters/.prettierrc.yml --write \"./**/*.{js,cjs,mjs,ts,tsx,jsx,json}\"",
    "lint": "eslint . --config ./.github/linters/eslint.config.mjs",
    "start": "node dist/index.mjs",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "type": "module"
}
